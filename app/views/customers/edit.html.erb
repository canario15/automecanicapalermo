<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'edit.png', :class => "icon-title" %>
      Editar Cliente
      <%= image_tag 'edit.png', :class => "icon-title", :style =>"float:right" %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="form-cust">
      <%= simple_form_for(@customer, :html => { :class => "form-horizontal my-form-center", :role => "form" }) do |f| %>
        <div class="form-group <%= "has-error" if @customer.errors[:owner].any? %>">
          <%= f.label :owner, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :owner, :class => "form-control" %>
            <% @customer.errors[:owner].each do |message| %>
              <span class="span-err">
                <i class="fa fa-exclamation-triangle"></i>
                <%=  message %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :invoice_name, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :invoice_name, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :rut, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :rut, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group <%= "has-error" if @customer.errors[:phone].any? %>">
          <%= f.label :phone, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :phone, :class => "form-control" %>
            <% @customer.errors[:phone].each do |message| %>
              <span class="span-err">
                <i class="fa fa-exclamation-triangle"></i>
                <%=  message %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :address, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :address, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :email, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :vehicles, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <div class="">
              <%= f.simple_fields_for :vehicles do |vehicle| %>
                <%= render 'vehicle_fields', :f => vehicle %>
              <% end %>
              <%= link_to_add_association f, :vehicles, data: {}, class: '' do %>
                Agregar Veh√≠culo
              <% end -%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <%= link_to 'Cancelar', customers_path, :class => "btn btn-outline btn-danger" %>
            <%= f.submit "Guardar ", :class =>  "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
