<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'folder.png', :class => "icon-title" %>
      Ordenes de Trabajo
    </h1>
  </div>
</div>

<table id="vehicles_table" class="table table-hover" data-source="<%= customers_url(format: "json")%>" >
  <thead>
    <tr>
      <th><%= link_to 'Número', '#'    %></th>
      <th><%= link_to 'Fecha', '#'     %></th>
      <th><%= link_to 'Clinete', '#'   %></th>
      <th><%= link_to 'Vehículo', '#'  %></th>
      <th><%= link_to 'Estado','#'     %></th>
      <th colspan="3"><%= link_to 'Acciones', '#' %></th>
    </tr>
  </thead>
  <tbody>
    <% @work_orders.each do |work_order|%>
      <tr>
        <td><%= work_order.id %></td>
        <td><%= work_order.date_in %></td>
        <td><%= work_order.customer %></td>
        <td><%= work_order.vehicle %></td>
        <td><%= work_order.status %></td>
        <td><%= link_to (image_tag 'show.png', :class => "small-icon", :title => "Ver"), work_order_path(work_order) %></td>
        <td><%= link_to (image_tag 'edit.png', :class => "small-icon", :title => "Editar"), edit_work_order_path(work_order) %></td>
        <td><%= link_to (image_tag 'delete.png', :class => "small-icon", :title => "Eliminar"), work_order, method: :delete, data: { confirm: '¿Esta seguro que quiere eliminar la orden?'} %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
<div class="option-links">
  <%= link_to (image_tag 'new.png', :class => "medium-icon", :title => "Nuevo"), new_work_order_path, :class => "new_order" %>
  <%= link_to 'Nueva Orden', new_work_order_path, :class => "new_customer" %>
</div>
<div class="row">
</div>
