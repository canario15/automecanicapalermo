<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
    <%= wicked_pdf_javascript_include_tag "number_pages" %>
  </head>
  <body onload='number_pages'>
    <div style="text-align:center; width: 100%">
      <div>
        <%= wicked_pdf_image_tag 'logo.png', :class => "logo-budget"  %>
      </div>
      <div style="margin-bottom: 10px; text-decoration: underline;">
        <h1 style="font-weight: 800;">ORDEN DE TRABAJO </h1>
      </div>
    </div>
    <div style="background: #f9f9f9 none repeat scroll 0 0; border: 1px solid; border-radius: 10px; padding-left: 70px; margin-bottom: 25px; display:flex;">
      <div style="display: inline-block; width: 40%">
        <p>
          <strong>NUMERO:</strong>
          <%= @work_order.id %>
        </p>
        <p>
          <strong>FECHA INGRESO:</strong>
          <%= @work_order.date_in  %>
        </p>
        <p>
          <strong>RECIBIDO POR:</strong>
          <%= @work_order.received_by %>
        </p>
        <p>
          <strong>ASIGNADO A:</strong>
          <%= @work_order.worked_by %>
        </p>
      </div>
      <div style="display: inline-block; width: 40%">
        <p>
          <strong>CLIENTE:</strong>
          <%= @work_order.customer %>
        </p>
        <p>
          <strong>VEHICULO:</strong>
          <%= @work_order.vehicle %>
        </p>
        <p>
          <strong>KM:</strong>
          <%= @work_order.km %>
        </p>
        <p>
          <strong>COMB.</strong>
          <%= @work_order.fuel %>
        </p>
      </div>
    </div>
    <div>
      <strong>INGRESOS:</strong>
      <table class="table table-striped" >
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
          <% @work_order.work_ins.each do |wi| %>
            <tr style="border-bottom: 1px solid #ddd;">
              <th style="font-weight: normal" width="75%"><%= wi.work %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <strong>TRABAJOS REALIZADOS:</strong>
      <table class="table table-striped" >
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
          <% 6.times do |i| %>
            <tr style="border-bottom: 1px solid #ddd;">
              <th style="font-weight: normal" width="75%"><%= i + 1 %>.</th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <strong>REPUESTOS:</strong>
      <table class="table table-striped" >
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
          <% 6.times do |i| %>
            <tr style="border-bottom: 1px solid #ddd;">
              <th style="font-weight: normal" width="75%"><%= i + 1 %>.</th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <strong>OBSERVACIONES:</strong>
      <table class="table table-striped" >
        <thead>
          <tr>
          </tr>
        </thead>
        <tbody>
          <% 4.times do |i| %>
            <tr style="border-bottom: 1px solid #ddd;">
              <th style="font-weight: normal" width="75%"><%= i + 1 %>.</th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div style="text-align: center; margin-top: 70px;">
      <p>
        Firma: ______________________
      </p>
    </div>
  </body>
</html>
