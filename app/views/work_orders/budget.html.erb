<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'show.png', :class => "icon-title" %>
      Presupuesto <%= @work_order.number %> - <%= @work_order.vehicle %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Número:</h4>
    </div>
    <div class="col-md-3 show-info">
      <h4><%= @work_order.number %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Fecha Ingreso:</h4>
    </div>
    <div class="col-md-3 show-info">
      <h4><%= @work_order.date_in %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Cliente:</h4>
    </div>
    <div class="col-md-3 show-info">
      <h4><%= @work_order.customer %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Tel/Cel:</h4>
    </div>
    <div class="col-md-3 show-info">
      <h4><%= @work_order.customer.phone %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Vehículo:</h4>
    </div>
    <div class="col-md-3 show-info">
      <h4><%= @work_order.vehicle %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Trabajos Realizados:</h4>
    </div>
    <div class="col-md-8 show-info">
      <table class="table table-hover" >
        <thead>
          <tr>
            <th><%= link_to 'Tarea', '#'     %></th>
            <th><%= link_to 'Costo', '#'     %></th>
          </tr>
        </thead>
        <tbody>
          <% @work_order.work_dones.each do |work_done|%>
            <tr>
              <td><%= work_done.work %></td>
              <td><input id="" class="form-control" type="text" name=""></td>
          <% end -%>
        </tbody>
      </table>
      <div class="col-md-6">
        <h4 class="show-label">Sub Total Mano de Obra:</h4>
      </div>
      <div class="col-md-6 show-info">
        <h4><input id="" class="form-control" type="text" name=""></h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Repuestos:</h4>
    </div>
    <div class="col-md-8 show-info">
      <table class="table table-hover"  >
        <thead>
          <tr>
            <th><%= link_to 'Pieza', '#'     %></th>
            <th><%= link_to 'Costo', '#'     %></th>
          </tr>
        </thead>
        <tbody>
          <% @work_order.replacements.each do |replacement|%>
            <tr>
              <td><%= replacement.name %></td>
              <td><input id="" class="form-control" type="text" name=""></td>
          <% end -%>
        </tbody>
      </table>
      <div class="col-md-6">
        <h4 class="show-label">Sub Total Repeustos:</h4>
      </div>
      <div class="col-md-5 show-info">
        <h4><input id="" class="form-control" type="text" name=""></h4>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h4 class="show-label">Total:</h4>
    </div>
    <div class="col-md-3 show-info">
      <h4><input id="" class="form-control" type="text" name=""></h4>
      + IVA
    </div>
  </div>
</div>
<div class="row  row-links">
  <%= link_to (image_tag 'back.png', :class => "medium-icon", :title => "Editar"), work_orders_path %>
  <%= link_to 'Atrás', work_order_path(@work_order) %>   |
  <%= link_to (image_tag 'edit.png', :class => "medium-icon", :title => "Guardar"), edit_work_order_path(@work_order) %>
  <%= link_to 'Guardar', edit_work_order_path(@work_order) %>
</div>
<div class="row">
</div>
