<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
    </h1>
  </div>
</div>
<div class="panel panel-default panel-top">
  <div class="panel-heading">
  </div>
  <div class="panel-body">
    <div class="row row-top">
      <div style="text-align:center" class="row">
        <%= image_tag 'logo.png', :class => "logo-budget" %>
      </div>
      <div class="title-budget">
        <h1>PRESUPUESTO</h1>
      </div>
    </div>
    <div class="row row-top">
      <div style="margin-left: 9%;" class="col-xs-5">
        <div class="row">
          <div class="col-md-6">
            <h4 class="show-label">Número:</h4>
          </div>
          <div class="col-md-6 show-info">
            <h4><%= @work_order.id %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <h4 class="show-label">Fecha Ingreso:</h4>
          </div>
          <div class="col-md-6 show-info">
            <h4><%= @work_order.date_in %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <h4 class="show-label">Empleado:</h4>
          </div>
          <div class="col-md-6 show-info">
            <h4><%= @work_order.user %></h4>
          </div>
        </div>
      </div>
      <div class="col-xs-5">
        <div class="row">
          <div class="col-md-6">
            <h4 class="show-label">Vehículo:</h4>
          </div>
          <div class="col-md-6 show-info">
            <h4><%= @work_order.vehicle %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <h4 class="show-label">Cliente:</h4>
          </div>
          <div class="col-md-6 show-info">
            <h4><%= @work_order.customer %></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <h4 class="show-label">Tel/Cel:</h4>
          </div>
          <div class="col-md-6 show-info">
            <h4><%= @work_order.customer.phone %></h4>
          </div>
        </div>
      </div>
    </div>
    <div style="margin-left: 5%" class="row">
      <%= simple_form_for(@work_order, :html => { :class => "", :role => "form" }) do |f| %>
        <div class="row row-top">
          <div class="col-md-2">
          <h4 class="show-label">Trabajos Realizados:</h4>
          </div>
          <div class="col-md-8 show-info">
            <table class="table table-hover" style="border: 1px solid #ddd;" >
              <thead>
                <tr>
                  <th width="75%" class="th-tab-show" >Tarea</th>
                  <th width="25%" class="th-tab-show">Costo</th>
                </tr>
              </thead>
              <tbody>
                <%= f.simple_fields_for :work_dones do |work_done| %>
                  <tr>
                    <td width="75%"><%= work_done.text_field :work, :class => "tex-field-to-label", :disabled => true  %></td>
                    <td width="25%">
                      <div class="form-group input-group frm-no-marg-bot">
                        <span class="input-group-addon">$</span>
                        <%= work_done.text_field :price, :class => "tot-filed work-dones-field form-control" %>
                        <span class="input-group-addon"> + IVA </span>
                      </div>
                    </td>
                  </tr>
                <% end -%>
                <tr style="background-color: #f5f5f5;">
                  <td width="75%"><h4 class="show-label">Sub Total Mano de Obra:</h4></td>
                  <td width="25%">
                    <div class="form-group input-group frm-no-marg-bot">
                      <span class="input-group-addon">$</span>
                      <%= f.simple_fields_for :budget do |budget| %>
                        <%= budget.text_field :subtotal_work_does, :class => "subtot-wor-do form-control sub-tot" %>
                      <% end -%>
                      <span class="input-group-addon"> + IVA </span>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row row-top">
          <div class="col-md-2">
          <h4 class="show-label">Repuestos:</h4>
          </div>
          <div class="col-md-8 show-info">
            <table class="table table-hover" style="border: 1px solid #ddd;" >
              <thead>
                <tr>
                  <th width="75%" class="th-tab-show">Pieza</th>
                  <th width="25%" class="th-tab-show">Costo</th>
                </tr>
              </thead>
              <tbody>
                <%= f.simple_fields_for :replacements do |replacement| %>
                  <tr>
                    <td width="75%"><%= replacement.text_field :name, :class => "tex-field-to-label", :disabled => true %></td>
                    <td width="25%">
                      <div class="form-group input-group frm-no-marg-bot">
                        <span class="input-group-addon">$</span>
                        <%= replacement.text_field :price, :class => "tot-filed rep-field form-control" %>
                        <span class="input-group-addon"> + IVA </span>
                      </div>
                    </td>
                  </tr>
                <% end -%>
                <tr  style="background-color: #f5f5f5;">
                  <td width="75%"><h4 class="show-label">Sub Total Repuestos:</h4></td>
                  <td width="25%">
                    <div class="form-group input-group frm-no-marg-bot">
                      <span class="input-group-addon">$</span>
                      <%= f.simple_fields_for :budget do |budget| %>
                        <%= budget.text_field :subtotal_rep, :class => "sub-tot-rep form-control sub-tot" %>
                      <% end -%>
                      <span class="input-group-addon"> + IVA </span>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <div class="row row-top">
          <div class="col-md-2">
            <h4 class="show-label">Total:</h4>
          </div>
          <div style="padding-left: 13px" class="col-md-3 form-group input-group">
            <span class="input-group-addon in-gr-ad-tot">$</span>
            <%= f.simple_fields_for :budget do |budget| %>
              <%= budget.text_field :total, :class => "total-budget form-control" %>
            <% end -%>
            <span class="input-group-addon in-gr-ad-tot"> + IVA </span>
          </div>
        </div>

        <div class="row  row-links-work">
          <%= link_to (image_tag 'back.png', :class => "medium-icon", :title => "Editar"), work_orders_path %>
          <%= link_to 'Atrás', work_order_path(@work_order) %>   |
          <%= image_tag 'new.png', :class => "medium-icon", :title => "Guardar" %>
          <%= f.submit "Guardar ", :class =>  "btn-save-bud" %> |

        </div>
      </div>
    <% end -%>
  </div>
</div>
<div class="row">
</div>
