<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'edit.png', :class => "icon-title" %>
      Editar Veh√≠culo
    </h1>
  </div>
</div>

<%= simple_form_for(@vehicle, :html => { :class => "form-horizontal my-form", :role => "form" }) do |f| %>
  <div class="form-group <%= "has-error" if @vehicle.errors[:car_brand].any? %>">
    <%= f.label :car_brand, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= select("vehicle", "car_brand_id", @car_brands.collect {|cb| [ "#{cb.name}", cb.id ] }, :prompt => "Seleccione..", :class => "form-control") %>
      <% @vehicle.errors[:car_brand].each do |message| %>
        <span class="span-err">
          <i class="fa fa-exclamation-triangle"></i>
          <%=  message %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="form-group <%= "has-error" if @vehicle.errors[:model].any? %>">
    <%= f.label :model, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :model, :class => "form-control" %>
      <% @vehicle.errors[:model].each do |message| %>
        <span class="span-err">
          <i class="fa fa-exclamation-triangle"></i>
          <%=  message %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :displacement, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :displacement, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :year, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group <%= "has-error" if @vehicle.errors[:plate].any? %>">
    <%= f.label :plate, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :plate, :class => "form-control" %>
      <% @vehicle.errors[:plate].each do |message| %>
        <span class="span-err">
          <i class="fa fa-exclamation-triangle"></i>
          <%=  message %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="form-group <%= "has-error" if @vehicle.errors[:color].any? %>">
    <%= f.label :color, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :color, :class => "form-control" %>
      <% @vehicle.errors[:color].each do |message| %>
        <span class="span-err">
          <i class="fa fa-exclamation-triangle"></i>
          <%=  message %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :chassis_number, :class => "col-sm-3 control-label" %>
    <div class="col-xs-6">
      <%= f.text_field :chassis_number, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Cancelar', vehicles_path, :class => "btn btn-outline btn-danger" %>
      <%= f.submit "Guardar ", :class =>  "btn btn-outline btn-success" %>
    </div>
  </div>
<% end -%>
