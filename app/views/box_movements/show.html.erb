<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'show.png', :class => "icon-title" %>
      <%= @box_movement.date %> - <%= @box_movement.id %>
      <%= image_tag 'show.png', :class => "icon-title", :style =>"float:right" %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12" >
    <div class="show-container">
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Fecha:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.date %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Centro de Costo:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.cost_center %></h4>
        </div>
      </div>
      <% if !@box_movement.work_order.blank? %>
        <div class="row">
          <div class="col-md-3">
            <h4 class="show-label">Orden de Trabajo:</h4>
          </div>
          <div class="col-md-4 show-info">
            <h4>
              <%= link_to work_order_path(@box_movement.work_order) do %>
                <%= @box_movement.work_order.id %>
              <% end -%>
            </h4>
          </div>
        </div>
      <% end -%>
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Detalle:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.desc %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Monto:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.value %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Moneda:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.currency %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Tipo:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.box_movement_type %></h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <h4 class="show-label">Empleado:</h4>
        </div>
        <div class="col-md-4 show-info">
          <h4><%= @box_movement.user %></h4>
        </div>
      </div>
      <div class="row  row-links">
        <%= link_to (image_tag 'back.png', :class => "medium-icon", :title => "Editar"), box_movements_path %>
        <%= link_to 'AtrÃ¡s', box_movements_path %> |
        <%= link_to (image_tag 'edit.png', :class => "medium-icon", :title => "Editar"), edit_box_movement_path(@box_movement)%>
        <%= link_to 'Editar', edit_box_movement_path(@box_movement) %>
      </div>
    </div>
  </div>
</div>


