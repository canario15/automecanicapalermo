<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'new.png', :class => "icon-title" %>
      Nuevo Empleado
    </h1>
  </div>
</div>

<%= semantic_form_for(@user, :html => { :class => "form-horizontal my-form", :role => "form" }) do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= f.text_field :name, :class => "form-control" %>
      <%= f.semantic_errors :name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_type, :class => "col-sm-2 control-label" %>
    <div class="col-xs-4">
      <%= select("user", "user_type", USER_TYPES, :prompt => "Seleccione..", :class => "form-control") %>
      <%= f.semantic_errors :user_type %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to "Cancelar", users_path(), class: "btn btn-outline btn-danger" %>
      <%= f.submit "Guardar ", :class =>  "btn btn-outline btn-success" %>
    </div>
  </div>

<% end %>
