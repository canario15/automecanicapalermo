<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'edit.png', :class => "icon-title" %>
      Editar Empleado
      <%= image_tag 'edit.png', :class => "icon-title", :style =>"float:right" %>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="form-cust">
      <%= simple_form_for(@user, :html => { :class => "form-horizontal my-form", :role => "form" }) do |f| %>
        <div class="form-group <%= "has-error" if @user.errors[:name].any? %> ">
          <%= f.label :name, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :name, :class => "form-control" %>
            <% @user.errors[:name].each do |message| %>
              <span class="span-err">
                <i class="fa fa-exclamation-triangle"></i>
                <%=  message %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="form-group <%= "has-error" if @user.errors[:user_type].any? %>  ">
          <%= f.label :user_type, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= select("user", "user_type", USER_TYPES, :prompt => "Seleccione..", :class => "form-control") %>
            <% @user.errors[:user_type].each do |message| %>
              <span class="span-err">
                <i class="fa fa-exclamation-triangle"></i>
                <%=  message %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="form-group <%= "has-error" if @user.errors[:username].any? %> ">
          <%= f.label :username, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.text_field :username, :class => "form-control" %>
            <% @user.errors[:username].each do |message| %>
              <span class="span-err">
                <i class="fa fa-exclamation-triangle"></i>
                <%=  message %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="form-group <%= "has-error" if @user.errors[:password].any? %> ">
          <%= f.label :password, :class => "col-sm-4 control-label" %>
          <div class="col-xs-4">
            <%= f.password_field :password, :class => "form-control" %>
            <% @user.errors[:password].each do |message| %>
              <span class="span-err">
                <i class="fa fa-exclamation-triangle"></i>
                <%=  message %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-10">
            <%= link_to "Cancelar", users_path(), class: "btn btn-outline btn-danger" %>
            <%= f.submit "Guardar ", :class =>  "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
