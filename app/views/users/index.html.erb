<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'customers.png', :class => "icon-title" %>
      Empleados
      <%= image_tag 'customers.png', :class => "icon-title", :style =>"float:right" %>
    </h1>
  </div>
</div>

<table id="users_table" class="table table-hover table-index">
  <thead>
    <tr>
      <th><%= link_to 'Id', '#'      %></th>
      <th><%= link_to 'Nombre', '#' %></th>
      <th><%= link_to 'Cargo', '#'  %></th>
      <th><%= link_to 'Usuario', '#'  %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.user_type %></td>
        <td><%= user.username %></td>
        <td><%= link_to (image_tag 'show.png', :class => "small-icon", :title => "Ver"), user_path(user) %></td>
        <td><%= link_to (image_tag 'edit.png', :class => "small-icon", :title => "Editar"), edit_user_path(user) %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
<div class="option-links">
  <%= link_to  new_user_path, :class => "link-to-btn" do %>
    <%= image_tag 'new.png', :class => "medium-icon", :title => "Nuevo" %>
    Nuevo Empleado
  <% end -%>
</div>
<div class="row">
</div>
