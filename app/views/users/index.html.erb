<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= image_tag 'car.png', :class => "icon-title" %>
      Empleados
    </h1>
  </div>
</div>

<table id="users_table" class="table table-hover">
  <thead>
    <tr>
      <th><%= link_to 'Id', '#'      %></th>
      <th><%= link_to 'Nombre', '#' %></th>
      <th><%= link_to 'Cargo', '#'  %></th>
      <th colspan="2"><%= link_to 'Acciones', '#' %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user|%>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.user_type %></td>
        <td><%= link_to (image_tag 'show.png', :class => "small-icon", :title => "Ver"), user_path(user) %></td>
        <td><%= link_to (image_tag 'edit.png', :class => "small-icon", :title => "Editar"), edit_user_path(user) %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
<div class="option-links">
  <%= link_to (image_tag 'new.png', :class => "medium-icon", :title => "Nuevo"), new_user_path, :class => "new_user" %>
  <%= link_to 'Nuevo Empleado', new_user_path, :class => "new_customer" %>
</div>
<div class="row">
</div>
