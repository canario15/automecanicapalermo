<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Escritorio</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-3 col-md-6">
    <%= link_to new_work_order_path() do %>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
              <i class="fa fa-plus fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div style="font-size:27px">Nuevo Trabajo</div>
            </div>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
  <div class="col-lg-3 col-md-6">
    <%= link_to new_customer_path()  do %>
      <div class="panel panel-green">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
             <i class="fa fa-plus fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div style="font-size:27px">Nuevo Cliente</div>
            </div>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
  <div class="col-lg-3 col-md-6">
    <%= link_to new_box_movement_path()  do %>
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-3">
             <i class="fa fa-plus fa-5x"></i>
            </div>
            <div class="col-xs-9 text-right">
              <div style="font-size:27px">Nuevo Movimiento</div>
            </div>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
  <div class="col-lg-3 col-md-6">
    <% if @work_order_asigned.count > 0 %>
      <%= link_to work_orders_path() do %>
        <div class="panel panel-yellow">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-edit fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge"><%= @work_order_asigned.count%></div>
                <div>En taller</div>
              </div>
            </div>
          </div>
        </div>
      <% end -%>
    <% end -%>
    <% if @work_order_undeliver.count > 0 %>
      <%= link_to work_orders_path() do %>
        <div class="panel panel-red">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-3">
                <i class="fa fa-exclamation-triangle fa-5x"></i>
              </div>
              <div class="col-xs-9 text-right">
                <div class="huge"><%= @work_order_undeliver.count%></div>
                <div style="font-size:15px ">Sin entregar</div>
              </div>
            </div>
          </div>
        </div>
      <% end -%>
    <% end -%>
  </div>
</div>

